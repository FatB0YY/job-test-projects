{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "api",
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
